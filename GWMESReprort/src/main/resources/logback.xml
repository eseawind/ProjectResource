<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!-- 需要保存到数据库的日志 -->
	<appender name="saveLog" class="com.rockwell.logger.LoggerInfo">
		<connectionSource class="ch.qos.logback.core.db.DriverManagerConnectionSource">
				<driverClass>oracle.jdbc.driver.OracleDriver</driverClass>
				<url>jdbc:oracle:thin:@10.1.245.54:1521:PROD</url>
				<user>ProdUAT</user>
				<password>ProdUAT</password>
		</connectionSource>
	</appender>
	<!-- 调试日志 -->
	<appender name="showSQl" class="ch.qos.logback.core.ConsoleAppender">  
	    <encoder>  
	      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>  
	      <charset>UTF-8</charset> 
	    </encoder>  
  	</appender>  
	<logger name="com.rockwell" level="info">  
        <appender-ref ref="saveLog" />
    </logger>  
    <logger name="com.rockwell" level="debug">  
        <appender-ref ref="showSQl" />
    </logger>
</configuration>